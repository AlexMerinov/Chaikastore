block content
        .wrapper__page.p-top-content
            .wrapper__haed 
                h1 Оформление заказа
                -
                    const breads = [
                        {
                            name: 'Главная',
                            url: 'main.html',
                        },
                        {
                            chapter: true,
                            name: 'Корзина',
                            url: 'cart.html',
                        },
                        {
                            name: 'Оформление заказа',
                        },
                    ];
                +breads-list(breads)
            .section 
                form.form.js-form-validate.cart-cols
                    .cart-cols__left
                        .form__wrapper
                            h3.form__subtitle Ваши данные
                            .form__line 
                                label.form__label
                                    input.form__input(type="text" class="form__input" required)
                                    span.form__ph Фамилия
                            .form__line 
                                label.form__label
                                    input.form__input(type="text" class="form__input" required)
                                    span.form__ph Имя
                            .form__line 
                                label.form__label
                                    input.form__input(type="text" name="phone" inputmode="phone" class="form__input" required)
                                    span.form__ph Телефон
                            .form__line 
                                label.form__label
                                    input.form__input(type="email" inputmode="email" class="form__input" required)
                                    span.form__ph E-mail
                            h3.form__subtitle Доставка 

                            div.form__line
                                input.form__input.js-dadata-city(placeholder="Ваш город" required)

                            .form__delivery.delivery-list
                                .delivery-list__item.js-choice-delivery.checked 
                                    .delivery-list__item-name Курьер СДЭК без примерки
                                    .delivery-list__item-desc Стоимость 490 ₽, бесплатно — при покупке от 10 000 ₽
                                .delivery-list__item.js-choice-delivery
                                    .delivery-list__item-name Пункт выдачи СДЭК
                                    .delivery-list__item-desc Стоимость 490 ₽, бесплатно — при покупке от 10 000 ₽
                                .delivery-list__item.js-choice-delivery
                                    .delivery-list__item-name Почта
                                    .delivery-list__item-desc Стоимость 490 ₽, бесплатно — при покупке от 10 000 ₽

                            h3.form__subtitle Адрес доставки

                            div(class="form__line")
                                label.form__label
                                    input.form__input.js-dadata-city.js-dadata-address(type="text" placeholder="Выберите адрес, или добавьте новый" required)

                            .form__line 
                                label.form__label.form__label--textarea
                                    textarea(class="form__input js-textarea" style="height:24px;overflow-y:hidden;")
                                    span.form__ph Комментарий к заказу
                    
