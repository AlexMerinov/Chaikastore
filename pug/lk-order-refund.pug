extends ./_layout
include ./mixins/list/basket-prod
include ./mixins/list/basket-list
 

block content
        .wrapper__page.p-top-content
            .wrapper__haed 
                h1 Личный кабинет 
            .section 
                .section-cols
                    .section-cols__side 
                        nav.person-menu.fade-in   
                            .person-menu__title.js-item-toggle 
                                span Мои заказы и возвраты
                                .arrow-drop
                                    span 
                                    span
                            .person-menu__list 
                                ul 
                                    li.person-menu__item    
                                        a(href="lk.html") Мои данные
                                    li.person-menu__item    
                                        a.active(href="lk-orders.html") Мои заказы и возвраты
                                    li.person-menu__item    
                                        a(href="lk-favorite.html") Избранное
                                    li.person-menu__item    
                                        a(href="cart  .html") Корзина
                                    li.person-menu__item    
                                        a(href="lk-bonus.html") Бонусные баллы
                                    li.person-menu__item    
                                        a(href="lk-cert.html") Подарочные сертификаты
                        a.person-out.person-out--desc(href="#" data-micromodal="modal-exit-lk") Выйти
                    .section-cols__content
                        .order-details
                            form.form.js-form-validate.order-details__form  
                                a.order-details__back(href='lk-orders.html') Назад
                                .order-details__header  
                                    .order-details__number
                                        span Возврат заказа № 145654545654  
                                    .order-details__date от 15.05.2022 
                                dl.order-details__field   
                                    dt.order-details__subtitle О покупателе:
                                    dd Воронцова Алина, +7 (960) 988 98 98, login@gmail.com
                                dl.order-details__field   
                                    dt.order-details__subtitle О заказе:
                                    dd 3 товара, оплата на сайте, без примерки
                                dl.order-details__field   
                                    dt.order-details__subtitle Доставка:
                                    dd Россия, г. Сочи, Адлерский район, ул. Цветочная, д. 15
                                    dd Почта России
                                    dd 19 ноября - 22 ноября
                                dl.order-details__field   
                                    dt.order-details__subtitle Стоимость:
                                    dd Доставка: 490 ₽  
                                    dd Скидка: 500 ₽  
                                    dd Итого: 24 500 ₽  
                                .order-details-list
                                    .order-details-list__name Выберите товары для возврата
                                    .order-details-list__description Обращаем ваше внимание, что возврат и обмен товара осуществляется за счет клиента.          
                                    .order-details-list__content
                                        -
                                            const basketProducts = [
                                                {   
                                                    order: 'checkbox',
                                                    name: 'Свитер молочного цвета с высоким воротом',
                                                    url: 'product-card.html',
                                                    img: 'images/content/products/item-prod_00.jpg',
                                                    art: 'BR-449',
                                                    hex: '#D81329',
                                                    color: 'Насыщенный красный',
                                                    size: 'XS',
                                                    label: 'Sale',
                                                    price_old: '99 999 ₽',
                                                    price_new : '9 999 ₽',
                                                },
                                                {
                                                    order: 'checkbox',
                                                    name: 'Платье миди бирюзового цвета',
                                                    url: 'product-card.html',
                                                    img: 'images/content/products/item-prod_02.jpg',
                                                    art: 'BR-449',
                                                    hex: '#74BDB4',
                                                    color: 'Бирюзовый',
                                                    size: 'XS',
                                                    price_new: '9 999 ₽',
                                                },
                                                {
                                                    order: 'checkbox',
                                                    name: 'Свитер молочного цвета',
                                                    url: 'product-card.html',
                                                    img: 'images/content/products/item-prod_03.jpg',
                                                    art: 'BR-449',
                                                    hex: '#DED2C6',
                                                    color: 'Молочный',
                                                    size: 'XS',
                                                    price_new: '19 999 ₽',
                                                },
                                            ];
                                        +basket-list(basketProducts) 
                                .order-details__field.mb-s 
                                    .order-details__title Выберите вид возврата 
                                    .order-details__select
                                        .form__select
                                            .js-select.form-select.form-select--big
                                                select
                                                    option Обмен на аналогичный товар
                                                    option Возврат денежных средств на карту с которой была совершена оплата   
                                .order-details__field.mb-s
                                    .order-details__title Контактные данные
                                    .order-details__description Пожалуйста, используйте адрес электронной почты или номер телефона, <br> указанный в учетной записи на момент создания заказа
                                    .order-details-list__content
                                        .feedback-contacts
                                            .feedback-contacts__check
                                                label.input-checkbox.js-fb-contacts(data-fb='email')
                                                    input(type="radio" checked required name="info" data-info="select-mail") 
                                                    span.input-checkbox__text По e-mail
                                                label.input-checkbox.js-fb-contacts(data-fb='phone') 
                                                    input(type="radio" required name="info" data-info="select-phone")
                                                    span.input-checkbox__text По номеру телефон
                                            .feedback-contacts__fild
                                                .form__line.hide(data-fb='phone') 
                                                    label.form__label 
                                                        input.form__input.js-input-format-phone(type="text" value="" name="phone" inputmode="tel" class="form__input" required)
                                                        span.form__ph Телефон
                                                .form__line(data-fb='email') 
                                                    label.form__label
                                                        input.form__input(type="email" value="" inputmode="email" class="form__input" required)
                                                        span.form__ph E-mail
                                .order-details__field.mb-s
                                    .order-details__title Причина возврата   
                                    .order-details__select
                                        .form__select
                                            .js-select.form-select.form-select--big
                                                select
                                                    option Не подошел размер
                                                    option Не подошел по стилю
                                                    option Доставлен не тот товар или брак
                                                    option.form-select__other Иное (комментарий)  
                                    .form__line 
                                        label.form__label.form__label--textarea
                                            textarea(class="form__input js-textarea" max="500" style="height:24px;overflow-y:hidden;")
                                            span.form__ph Комментарий к заказу
                                        span.form__text 
                                            | Осталось символов:
                                            span.symbol-counter

                                    .form__line 
                                        .upload-file__wrapper
                                            input(
                                                type="file" 
                                                name="files"
                                                id="upload-file__input" 
                                                class="upload-file__input" 
                                                multiple  
                                                accept="image/jpeg,image/png,image/gif"
                                            )
                                            label.upload-file__label(for="upload-file__input")
                                                | Приложите до 5 фото, до 15мб
                                                span.btn.btn--secondary Прикрепить файл
                                            .upload-file__list
                                
                                .order-details__field.mb-s                                                      
                                            .order-details__title Способ возврата 
                                            .order-details__select
                                                .form__select
                                                    .js-select.form-select.form-select--big
                                                        select
                                                            option Самостоятельный возврат почтовой или курьерской службой 
                                                            option Самостоятельный возврат в пункт самовывоза (ТЦ "Авиапарк")
                                            .order-details__download
                                                | В отправление необходимо вложить бланк возврата
                                                a.btn.btn--secondary(href="/Chaika_Blank_Refund.pdf" download) Скачать бланк
                                button.btn.btn--primary.order-details__submit(type="submit") Оформить возврат

                    a.person-out.person-out--mob(href="#" data-micromodal="modal-exit-lk") Выйти


                            
                            
                            