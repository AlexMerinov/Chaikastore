mixin slider-lightbox(items)
    .swiper.js-slider-lightbox
        .swiper-wrapper     
            each item, index in items 
                -
                    const {
                        picture,   
                        name, 
                    } = item;
                .swiper-slide(data-swiper-slide-index=index)
                    .swiper-zoom-container 
                        picture 
                            source(
                                srcset=picture,
                                media='(max-width: 1280px)'
                            )
                            img(src=picture, alt=name)