mixin breads-list(items)
    ul(class="breads")
        each item, index in items
            -
                const {
                    name,
                    url,
                    chapter,
                } = item;
            li(class=(chapter === true ? 'breads__item chapter' : 'breads__item'))
                if url
                    a(href=url class="breads__link")
                        !=name
                else
                    !=name